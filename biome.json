{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"files": {
		"ignore": [
			"web/static/*",
			".pnpm-store",
			"package.json",
			"./playwright-report",
			"./playwright",
			"./test-results",
			"./sa/dict/",
			"./dist",
			"./public/en/",
			"./_dprhtml/js/legacy/tiklist.js",
			"./_dprhtml/js/legacy/attlist.js"
		]
	},
	"linter": {
		"enabled": true,
		"ignore": ["./_dprhtml/js/legacy/", "./_dprhtml/js/dprviewmodel.js"],
		"rules": {
			"recommended": true,
			"a11y": {
				"useGenericFontNames": "off"
			},
			"complexity": {
				"noForEach": "off"
			},
			"suspicious": {
				"noAssignInExpressions": "off"
			}
		}
	}
}
