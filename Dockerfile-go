# Build stage
FROM golang:1.22-alpine AS builder

WORKDIR /app

# Copy go mod files
COPY go.mod ./

# Download dependencies
RUN go mod download

# Copy source code
COPY . .

# Build the binary
RUN CGO_ENABLED=0 GOOS=linux go build -o dpr ./cmd/dpr

# Production stage
FROM alpine:3.19

WORKDIR /app

# Copy binary from builder
COPY --from=builder /app/dpr .

# Copy static files
COPY --from=builder /app/web ./web
COPY --from=builder /app/public ./public

# Expose port
EXPOSE 8080

# Run the server
CMD ["./dpr", "-port", "8080", "-data", "./public"]
